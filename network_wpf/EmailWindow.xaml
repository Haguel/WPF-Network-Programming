<Window x:Class="network_wpf.EmailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:network_wpf"
        mc:Ignorable="d"
        Title="EmailWindow" Height="200" Width="400">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Label Content="Кому:"/>
            <TextBox x:Name="textBoxTo" Text="hammanov.gleb@gmail.com"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Тема:"/>
            <TextBox x:Name="textBoxSubject" Text=""/>
        </StackPanel>
        <TextBox x:Name="textBoxMessage" Text="Hello World!" TextWrapping="Wrap"/>
        <Button x:Name="SendButton1" Content="Надіслати" Click="SendButton1_Click"/>
        <TextBox x:Name="textBoxHtml" Text="&lt;h2>Добрий день!&lt;/h2> Вас вітає програма &lt;b style='color:tomato'>автоматичного&lt;/b> надсилання листів"  TextWrapping="Wrap"/>
        <Button x:Name="SendButton2" Content="Надіслати" Margin="20 10" Click="SendButton2_Click"/>
        <Label Content="Send code button below"></Label>
        <Button x:Name="SendButton3" Content="Надіслати" Margin="20 10" Click="SendButton3_Click"/>
    </StackPanel>
</Window>
